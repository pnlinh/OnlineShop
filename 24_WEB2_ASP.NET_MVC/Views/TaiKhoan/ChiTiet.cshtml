@model _24_WEB2_ASP.NET_MVC.Models.IndexViewModel
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css
{
    <head>
    <link href="~/Content/style.css" rel="stylesheet" />
    <style>
        .section-padding2 {
            padding: 30px 0;
        }

        .my-account-area h1 {
            margin-bottom: 20px;
        }

        h1.heading-title {
            border-bottom: 1px solid #d6d4d4;
            font: 600 18px/22px "Open Sans",sans-serif;
            padding: 0 0 17px;
            text-transform: uppercase;
            margin: 0 0 10px;
        }
        .custom-select {
            background: #d6d4d4;
        } p {
              margin: 0 0 15px;
          }

        .addresses-lists {
            margin-bottom: 30px;
            overflow: hidden;
        }

        .panel-default > .panel-heading {
            background-image: linear-gradient(#f7f7f7, #ededed);
            border-color: #cacaca #b7b7b7 #9a9a9a;
            border-image: none;
            border-radius: 4px 4px 0 0;
            border-style: solid;
            border-width: 1px;
            color: #555454;
            display: block;
            font: 600 16px/20px "Open Sans",sans-serif;
            overflow: hidden;
            text-decoration: none;
            text-shadow: 0 1px #ffffff;
            text-transform: uppercase;
        }

        .danger {
            color: red;
        }

        .panel-default > .panel-heading h4 {
            font-size: 16px;
            font-weight: 500;
            line-height: 1.1;
            margin: 0 0 10px;
        }

        .panel-title a {
            display: block;
            position: relative;
        }

        .panel-title a::before {
            border: 1px solid #eeeeee;
            content: "";
            height: 46px;
            left: 30px;
            position: absolute;
            top: -10px;
        }

        .addresses-lists .panel-heading a i {
            color: #ffb3b3;
            font-size: 20px;
        }

        .addresses-lists .panel-heading a span {
            margin-left: 20px;
        }

        .addresses-lists h1.heading-title {
            font: 500 16px/22px "Open Sans",sans-serif;
        }

        .my-account-area h1 {
            margin-bottom: 20px;
        }

        h1.heading-title {
            border-bottom: 1px solid #d6d4d4;
            /*font: 600 18px/22px "Open Sans",sans-serif;*/
            padding: 0 0 17px;
            text-transform: uppercase;
        }

        .addresses-lists p.coupon-text {
            color: #333333;
        }

        .coupon-info p.coupon-text {
            margin-bottom: 15px;
        }

        .addresses-lists p.required {
            color: #f13340;
            margin: 9px 0 16px;
        }

        .coupon-info p {
            margin-bottom: 0;
        }

        p.form-row label {
            display: block;
            color: #333333;
            max-width: 100%;
            margin-bottom: 5px;
            font-weight: 700;
        }

        span.required {
            color: #ff0000;
            font-weight: 700;
        }

        p.form-row input {
            background: #fbfbfb none repeat scroll 0 0;
            border: 1px solid #e5e5e5;
            height: 30px;
            margin: 0 0 14px;
            outline: 0 none;
            padding: 0 0 0 10px;
            width: 100%;
        }

        .checkbox-form p.form-row, .country-select {
            margin-bottom: 20px;
        }

        .country-select label, .checkout-form-list label {
            color: #333333;
            display: block;
            margin: 0 0 5px;
            max-width: 100%;
            margin-bottom: 5px;
            font-weight: 700;
        }

        .addresses-lists .shop-select select {
            width: 100%;
        }

        .shop-select select {
            -moz-appearance: none;
            -moz-user-select: none;
            background: #fbfbfb url(img/select-icon.png) no-repeat scroll right center;
            border-style: solid none solid solid;
            border-width: 1px medium 1px 1px;
            color: #9c9b9b;
            font-family: arial;
            font-size: 12px;
            font-weight: 400;
            height: 27px;
        }

        .addresses-lists p.required {
            color: #f13340;
            margin: 9px 0 16px;
        }

        .button.button-small {
            background: #6f6f6f none repeat scroll 0 0;
            border-color: #666666 #5f5f5f #292929;
            border-image: none;
            border-radius: 0;
            border-style: solid;
            border-width: 1px;
            color: #ffffff;
            font: bold 13px/17px Arial,Helvetica,sans-serif;
            padding: 0;
            text-shadow: 1px 1px rgba(0, 0, 0, 0.24);
        }

        .button.button-small span {
            border: 1px solid #8b8a8a;
            display: block;
            padding: 3px 8px;
        }

        addresses-lists .btn-default i {
            font-size: 10px;
            margin-right: 10px;
        }

        p.alert {
            border-bottom: 1px solid #dddddd;
            margin-bottom: 15px;
        }

        .order-history p {
            background: #4a4a4a none repeat scroll 0 0;
            color: #ffffff;
            padding: 15px;
        }

        .coupon-info .form-info {
            background: #d6d4d4;
        }
    </style>
    <script src="~/Scripts/vendor/jquery-1.12.0.min.js"></script>
    <script type="text/javascript">
        function addRequestVerificationToken(data) {
            data.__RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
            return data;
        };
        $(document).ready(function () {
            //Country Dropdown Selectedchange event
            $("#Country").change(function () {
                $("#State").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetStates","MuaSam")', // Calling json method
                    dataType: 'json',
                    data: addRequestVerificationToken({ id: $("#Country").val()}),
                    // Get Selected Country ID.
                    success: function (states) {
                        $.each(states, function (i, state) {
                            $("#State").append('<option value="' + state.Value + '">' +
                                state.Text + '</option>');
                        });
                    },

                });
                return false;
            })
        });
    </script>
    </head>
}


<div class="my-account-area section-padding2" style="margin-top:40px;">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="heading-title">Thông tin chi tiết tài khoản </h1>
                <p>Chào bạn đã đến với trang tài khoản, hãy xem lại và chỉnh sữa thông tin hoặc thêm để dễ dàng cho việc thanh toán</p>
            </div>
        </div>
        <div class="row">
            <div class="addresses-lists">
                <div class="col-xs-8 col-sm-6 col-lg-6 col-sm-offset-3">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="panel panel-default">
                           
                            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" aria-expanded="true" style="height: -1px;">
                                <div class="panel-body">
                                    <div class="coupon-info">
                                        <h1 class="heading-title">Địa chỉ của bạn </h1>
                                        @using (Html.BeginForm("ChiTiet", "TaiKhoan", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            if (Model.TaiKhoan != null) {
                                                var a = Model.TaiKhoan.ThanhPho.Huyens.Where(s => s.idThanhPho == s.ThanhPho.ID).FirstOrDefault();
                                                <p class="form-row">
                                                    <label>Email<span class="required">*</span></label>
                                                    <script>
                                                     $(window).on("load", function () {
                                                         $('#email-form1').val($('#email-form1').val().replace(/\s/g, ""));
                                                     });
                                                    </script>
                                                    <input type="text" readonly value="@Model.TaiKhoan.Email" />
                                                </p>
                                                <p class="form-row">
                                                    <label>Họ tên<span class="required">*</span></label>
                                                    @Html.ValidationMessageFor(m => m.TestTwo.Name, "", new { @class = "danger" })
                                                    @Html.TextBoxFor(m => m.TestTwo.Name, new { @class = "form-info", placeholder = "Họ và tên ", @readonly = "readonly", @Value = Model.TaiKhoan.Name })
                                                </p>
                                                <p class="form-row">
                                                    <label>Địa chỉ<span class="required">*</span></label>
                                                    @Html.ValidationMessageFor(m => m.TestTwo.Address, "", new { @class = "danger" })
                                                    @Html.TextBoxFor(m => m.TestTwo.Address, new { @class = "form-info", placeholder = "Địa chỉ", @readonly = "readonly", @Value = Model.TaiKhoan.Address })
                                                </p>
                                                @*<div class="country-select shop-select">
                                                    <label>Thành phố/Tỉnh <span class="required">*</span></label>
                                                    @Html.DropDownListFor(m => m.TestOne.ID, ViewBag.Country as SelectList, Model.TaiKhoan.ThanhPho.TenThanhPho, new { @class = "custom-select custom-form", id = "Country", @style = "margin-top:30px", @disabled = "disabled" })
                                                </div>
                                                <div class="country-select shop-select">
                                                    <label>Huyện <span class="required">*</span></label>
                                                    @Html.DropDownListFor(m => m.TestThree.ID, new SelectList(string.Empty, "Value", "Text"),a.TenHuyen, new { @class = "custom-select custom-form", id = "State", @style = "margin-top:30px", @disabled= "disabled" })
                                                </div>*@
                                                <p class="form-row">
                                                    <label>Số điện thoại<span class="required">*</span></label>
                                                    @Html.ValidationMessageFor(m => m.TestTwo.Phone, "", new { @class = "danger" })
                                                    @Html.TextBoxFor(m => m.TestTwo.Phone, new { @class = "form-info", placeholder = "Số điện thoại ", @readonly = "readonly", @Value = Model.TaiKhoan.Phone })
                                                </p>
                                                <!--<p class="required">** You must register at least one phone number.</p>-->
                                                <script>
                                                     $(document).ready(function () {
                                                         $('.button-small').click(function () {
                                                             $(".form-info").removeAttr("readonly");
                                                             $(".form-info").css("background", "white");
                                                             //$('.custom-select').removeAttr("disabled");
                                                         });
                                                     });
                                                </script>
                                                <a title="Save" class="btn btn-default button button-small" href="javascript:void(0);">
                                                    <span>
                                                        Chỉnh sửa
                                                        <i class="fa fa-chevron-right"></i>
                                                    </span>
                                                </a>
                                                <button type="submit" style="margin-top:10px;border: 1px solid #8b8a8a;display: block;padding: 3px 8px;" class="btn btn-default button button-small">
                                                    Lưu
                                                    <i class="fa fa-chevron-right"></i>
                                                </button>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="create-account-button pull-left">
                    <a href="index.html" class="btn btn-default button button-small" title="Home">
                        <span>
                            <i class="fa fa-chevron-left"></i>
                            Trang chủ
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

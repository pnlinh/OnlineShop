<!DOCTYPE html>
<html>
@Html.Partial("_Head")
@RenderSection("css", false)
<body class="skin-red fixed sidebar-mini" style="height: auto;">
<div class="wrapper">
    @Html.Partial("_Navbar")
    @Html.Partial("_Sidebar")
    <div class="content-wrapper" style="min-height: 467px;">
        <section class="content-header">
            <h1>
                @RenderSection("name", false)                
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>                 
                    @Html.ActionLink("Trang chủ", "ThongKe", "TrangChu")
                </li>
                @RenderSection("path", false)
            </ol>
        </section>
        <section class="content">
            <div class="row">
                @RenderBody()
            </div>
        </section>
    </div>
    @Html.Partial("_Footer")
</div>   
    @Html.Partial("_Script") 
@RenderSection("js", false)
</body>
</html>
@using _24_WEB2_ASP.NET_MVC.Helpers
@using _24_WEB2_ASP.NET_MVC.Models
<aside class="main-sidebar">

    <section class="sidebar" style="height: auto;">              

        @if (CurrentContext.DaDangNhap())
        {
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/Assets/admin/joker.png" class="img-circle">
                </div>
                <div class="pull-left info">
                    <p>@CurrentContext.LayThongTinAdmin().Name</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Đang trực tuyến</a>
                </div>
            </div>
        }        
        
        <ul class="sidebar-menu">
            <li class="header">QUẢN LÝ SẢN PHẨM</li>

            <li @if (Request.Url.ToString().Contains("TrangChu")) { @Html.Raw("class='active'") }>
                <a href="@Url.Action("ThongKe", "TrangChu")">
                    <i class="fa fa-bar-chart"></i><span>Thống kê</span>
                </a>
            </li>

            <li @if (Request.Url.ToString().Contains("DanhMuc")) { @Html.Raw("class='active'")  }>
                <a href="@Url.Action("DanhSach", "DanhMuc")">
                    <i class="fa fa-tags"></i><span>Danh mục</span>
                </a>
            </li>
                       

            <li @if (Request.Url.AbsolutePath.Substring(7, 4) == "Loai") { @Html.Raw("class='active'") }>
                <a href="@Url.Action("DanhSach", "LoaiSanPham")">
                    <i class="fa fa-gift"></i> <span>Loại sản phẩm</span>                    
                </a>
            </li>

            <li @if (Request.Url.ToString().Contains("NhaSanXuat")) { @Html.Raw("class='active'")  }>
                <a href="@Url.Action("DanhSach", "NhaSanXuat")">
                    <i class="fa fa-empire"></i> <span>Nhà sản xuất</span>                  
                </a>
            </li>

            <li @if (Request.Url.ToString().Contains("SanPham") && !Request.Url.ToString().Contains("LoaiSanPham")) { @Html.Raw("class='active'")  }>
                <a href="@Url.Action("DanhSach", "SanPham")">
                    <i class="fa fa-product-hunt"></i> <span>Sản phẩm</span>                   
                </a>
            </li>

            <li @if (Request.Url.ToString().Contains("TaiKhoan")) { @Html.Raw("class='active'")  }>
                <a href="@Url.Action("DanhSach", "TaiKhoan")">
                    <i class="fa fa-user"></i> <span>Tài khoản</span>                    
                </a>
            </li>

            <li @if (Request.Url.ToString().Contains("DonHang")) { @Html.Raw("class='active'")  }>
                <a href="@Url.Action("DanhSach", "DonHang")">
                    <i class="fa fa-shopping-cart"></i> <span>Đơn hàng</span>
                </a>
            </li>
        </ul>
    </section>
</aside>
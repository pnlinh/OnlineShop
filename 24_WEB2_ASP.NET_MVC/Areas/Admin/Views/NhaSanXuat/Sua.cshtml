@model _24_WEB2_ASP.NET_MVC.Models.NhaSanXuat


@{
    ViewBag.Title = "Nhà Sản Xuất";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section name
{
    Nhà Sản Xuất
    <small>Sửa</small>
}

@section path
{
    <li>@Html.ActionLink("Nhà Sản Xuất", "DanhSach", "NhaSanXuat")</li>
    <li class="active">Sửa</li>
}

<div class="col-md-6 col-md-offset-3">
    <div class="box box-primary">

        <form action="" method="post" id="frmSuaNSX">
            <div class="box-body">

                <div class="form-group">
                    <label for="TenNhaSanXuat">Tên nhà sản xuất</label>
                    <div class="nhasanxuat">
                        <input type="text" class="form-control" id="TenNhaSanXuat" name="TenNhaSanXuat" value="@Model.TenNhaSanXuat">
                    </div>
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Lưu lại</button>
                <button type="reset" class="btn btn-danger" style="margin-left: 35px;">Hủy bỏ</button>
            </div>
        </form>
    </div>
</div>

@section js
{
    <script src="~/Assets/admin/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $('#frmSuaNSX').validate({
                rules: {
                    TenNhaSanXuat: {
                        required: true,
                        minlength: 3
                    }
                },
                messages: {
                    TenNhaSanXuat: {
                        required: 'Hãy nhập tên nhà sản xuất',
                        minlength: 'Tên nhà sản xuất phải từ 3 kí tự trở lên'
                    }
                },
                errorElement: "em",
                errorPlacement: function (error, element) {
                    error.addClass("help-block");

                    if (element.prop("type") === "checkbox") {
                        error.insertAfter(element.parent("label"));
                    } else {
                        error.insertAfter(element);
                    }
                },

                highlight: function (element, errorClass, validClass) {
                    $(element).parents(".nhasanxuat").addClass("has-error").removeClass("has-success");
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).parents(".nhasanxuat").addClass("has-success").removeClass("has-error");
                }

            });
        });
    </script>
}